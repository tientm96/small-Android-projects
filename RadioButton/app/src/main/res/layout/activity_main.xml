<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mtit.minhtien.radiobutton.MainActivity">

    <Button
        android:id="@+id/buttonXacNhan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Xác Nhận"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="79dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupThoigian"
        app:layout_constraintHorizontal_bias="0.0" />

    <RadioGroup
        android:id="@+id/radioGroupThoigian"
        android:layout_width="141dp"
        android:layout_height="183dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="71dp"
        android:layout_marginTop="33dp"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButtonSang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="Sáng" />

        <RadioButton
            android:id="@+id/radioButtonTrua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Trưa" />

        <RadioButton
            android:id="@+id/radioButtonToi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tối" />
    </RadioGroup>
</android.support.constraint.ConstraintLayout>
