<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:background="#a2efe7"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Fragment này chứa thông tin của mỗi sinh viên
    khi ta nhấn chọn item trong list. Chọn item xong sẽ chuyển
    thông tin qua fragment này hiển thị lên.-->

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textViewHoTenInfo"
        android:textColor="#ff00"
        android:textSize="40sp"
        android:text="Họ tên"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textViewNamsinh"
        android:textColor="#2326dc"
        android:textSize="30sp"
        android:text="Năm sinh: 2017"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textViewDiaChi"
        android:textColor="#cab813"
        android:textSize="30sp"
        android:text="Địa chỉ: Hà Nội"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textViewEmail"
        android:textColor="#25e217"
        android:textSize="30sp"
        android:text="Email: abc@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>