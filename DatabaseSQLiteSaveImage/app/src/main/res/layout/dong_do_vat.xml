<?xml version="1.0" encoding="utf-8"?>

<!--Desgin cho mỗi dòng của listView-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_margin="5dp"
        android:padding="10dp"
        android:id="@+id/imageViewHinhCustom"
        android:layout_width="120dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#0dae2a"
            android:id="@+id/textviewTenCustom"
            android:textSize="24sp"
            android:text="Tên đồ vật"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#3e3e3e"
            android:id="@+id/textviewMotaCustom"
            android:textSize="20sp"
            android:text="Mô tả đồ vật"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>