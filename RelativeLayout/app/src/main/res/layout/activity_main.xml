<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/activity_main"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.mtit.minhtien.relativelayout.MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textview1"
        android:textSize="22sp"
        android:text="Android 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/textview1"
        android:id="@+id/textview2"
        android:textSize="22sp"
        android:text="Android 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/textview3"
        android:textSize="22sp"
        android:text="Android 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_alignParentRight="true"
        android:layout_below="@id/textview3"
        android:id="@+id/textview4"
        android:textSize="22sp"
        android:text="Android 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:padding="20dp"
        android:background="#ff0"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/textview2"
        android:layout_below="@id/textview2"
        android:id="@+id/textview5"
        android:textSize="22sp"
        android:text="Android 5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/textview6"
        android:textSize="22sp"
        android:text="Android 6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_toRightOf="@id/textview6"
        android:layout_above="@id/textview6"
        android:id="@+id/textview7"
        android:textSize="22sp"
        android:text="Android 7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/textview7"
        android:id="@+id/textview8"
        android:textSize="22sp"
        android:text="Android 8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>